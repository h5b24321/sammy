local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Ban mesajı GUI'si oluştur
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "BanMessage"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.BackgroundTransparency = 0.3
Frame.Parent = ScreenGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Size = UDim2.new(1, 0, 1, 0)
TextLabel.Text = "Sammy Banned You"
TextLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.GothamBold
TextLabel.BackgroundTransparency = 1
TextLabel.Parent = Frame

-- Ekranı karartıp oyun kontrolünü kapat
game.StarterGui:SetCore("SendNotification", {
	Title = "Banned";
	Text = "You have been banned by Sammy.";
	Duration = 5;
})

-- Oyuncunun hareketini dondur (görsel amaçlı)
local character = Player.Character or Player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
humanoid.WalkSpeed = 0
humanoid.JumpPower = 0

-- Kamera sallantı efekti
local camera = workspace.CurrentCamera
for i = 1, 10 do
	camera.CFrame = camera.CFrame * CFrame.Angles(0, 0, math.rad(math.random(-2, 2)))
	task.wait(0.05)
end

-- 3 saniye sonra ekran tamamen kararır
for i = 1, 50 do
	Frame.BackgroundTransparency = i / 50
	task.wait(0.03)
end

-- Oyunu kapatma efekti
Player:Kick("Sammy Banned You")
